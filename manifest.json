{
  "manifest_version": 2,
  "name": "Cykelgear Price Comparison",
  "version": "1.3",
  "description": "Extension that compares the price of the product you are viewing on Cykelgear, to the prices on Bike-discount and Bike-components. For statistical purposes, this extension tracks when users click on comparison links, collecting store name, product information, and prices to improve the service.",
  "permissions": [
    "activeTab",
    "webRequest",
    "https://*.cykelgear.dk/*",
    "https://*.bike-discount.de/*",
    "https://*.bikable.no/*",
    "https://*.bikable.com/*",
    "https://*.bikable.se/*",
    "https://*.bike-components.de/*",
    "https://jrgrafisk.dk/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.cykelgear.dk/*",
        "https://*.bikable.no/*",
        "https://*.bikable.com/*",
        "https://*.bikable.se/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/16x16bc.png",
    "48": "icons/48x48bc.png",
    "128": "icons/128x128bc.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "firefoxextension@jrgrafisk.dk",
      "strict_min_version": "134.0",
      "android_package_name": "org.mozilla.firefox"
    }
  },
  "privacy": {
    "websites": [
      "https://jrgrafisk.dk"
    ]
  }
}