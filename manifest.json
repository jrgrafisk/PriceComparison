{
  "manifest_version": 3,
  "name": "Cykelgear Price Comparison",
  "version": "1.1",
  "description": "Extension that compares the price of the product you are viewing on Cykelgear, to the prices on Bike-discount and Bike-components.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://*.cykelgear.dk/*",
    "https://*.bike-discount.de/*",
	"https://*.bikable.no/*",
	"https://*.bikable.com/*",
    "https://*.bikable.se/*",
    "https://*.bike-components.de/*"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.cykelgear.dk/*",
		"https://*.bikable.no/*",
		"https://*.bikable.com/*",
        "https://*.bikable.se/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/16x16bc.png",
    "48": "icons/48x48bc.png",
    "128": "icons/128x128bc.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "firefoxextension@jrgrafisk.dk",
      "strict_min_version": "134.0"
    }
  }
}